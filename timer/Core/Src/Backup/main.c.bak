/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_I2C1_Init();
  MX_SPI1_Init();
  MX_USB_PCD_Init();
  MX_TIM2_Init();
  MX_USART2_UART_Init();
  /* USER CODE BEGIN 2 */
  HAL_TIM_IC_Start_DMA(&htim2, TIM_CHANNEL_1, dma_circular, offsize * 2);


  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  while (!rdy){ __NOP();}
	  memcpy(safe_buf + offset, dma_circular + offset, offsize);
	  uint32_t cum_time = 0;
	  for(uint16_t i = 0; i < offsize; ++i){
		  cum_time += safe_buf[offset+i];
	  }
	  sprintf(msg, "time between 5 presses: %u \r\n", cum_time);
	  cum_time = 0;
	  HAL_UART_Transmit(&huart2, msg, strlen(msg), 100);
	  rdy = false;
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

